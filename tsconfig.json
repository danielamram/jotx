{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "outDir": "build",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node"
  }
}
